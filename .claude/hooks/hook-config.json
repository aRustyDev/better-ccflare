{
  "version": "1.0.0",
  "name": "better-ccflare Quality Check Hook",
  "description": "Quality checks for better-ccflare TypeScript monorepo (uses Biome)",
  "projectType": "node-typescript",
  "typescript": {
    "enabled": true,
    "showDependencyErrors": false
  },
  "eslint": {
    "enabled": false,
    "autofix": false
  },
  "prettier": {
    "enabled": false,
    "autofix": false
  },
  "biome": {
    "enabled": true,
    "autofix": true
  },
  "general": {
    "autofixSilent": true,
    "debug": false
  },
  "rules": {
    "console": {
      "enabled": false,
      "severity": "info",
      "message": "Console is acceptable for server/CLI tools"
    },
    "asAny": {
      "enabled": true,
      "severity": "warning",
      "message": "Prefer proper types or 'as unknown' for type assertions"
    },
    "debugger": {
      "enabled": true,
      "severity": "error",
      "message": "Remove debugger statements before committing"
    },
    "todos": {
      "enabled": true,
      "severity": "info",
      "patterns": ["TODO", "FIXME", "HACK"]
    }
  },
  "fileTypes": {
    "server": {
      "patterns": ["*.ts"],
      "paths": ["apps/server/", "packages/"]
    },
    "dashboard": {
      "patterns": ["*.tsx", "*.ts"],
      "paths": ["packages/dashboard-web/"]
    },
    "tui": {
      "patterns": ["*.ts"],
      "paths": ["apps/tui/"]
    }
  },
  "ignore": {
    "paths": [
      "node_modules/",
      "build/",
      "dist/",
      "coverage/",
      "*.config.js",
      "*.config.ts"
    ]
  }
}
